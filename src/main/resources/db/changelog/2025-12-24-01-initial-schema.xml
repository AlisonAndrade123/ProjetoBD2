<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <!-- Changeset para habilitar a extensão PostGIS -->
    <changeSet id="1-enable-postgis" author="alison">
        <sql>
            CREATE EXTENSION IF NOT EXISTS postgis;
        </sql>
    </changeSet>

    <!-- Changeset para criar a tabela de categorias -->
    <changeSet id="2-create-table-categorias" author="alison">
        <createTable tableName="categorias">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset para criar a tabela de produtos -->
    <changeSet id="3-create-table-produtos" author="alison">
        <createTable tableName="produtos">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)"/>
            <column name="preco" type="NUMERIC(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="quantidade" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="categoria_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="produtos"
                                 baseColumnNames="categoria_id"
                                 constraintName="fk_produto_categoria"
                                 referencedTableName="categorias"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!--
        Changeset para criar a tabela de lojas (CORRIGIDO)
        Usamos <sql> porque o tipo GEOGRAPHY é específico do PostGIS
        e o <createTable> padrão do Liquibase pode não entendê-lo.
    -->
    <changeSet id="4-create-table-lojas-corrigido" author="darioarthur">
        <sql>
            CREATE TABLE lojas (
            id BIGINT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
            nome VARCHAR(255) NOT NULL,
            localizacao geography(Point, 4326)
            );
        </sql>
    </changeSet>

    <!-- Changeset para criar a função PL/pgSQL -->
    <changeSet id="5-create-function-calcular-estoque" author="alison">
        <sql splitStatements="false">
            CREATE OR REPLACE FUNCTION calcular_valor_total_estoque_por_categoria(id_categoria BIGINT)
            RETURNS NUMERIC AS $$
            DECLARE
            valor_total NUMERIC := 0;
            BEGIN
            SELECT INTO valor_total SUM(preco * quantidade)
            FROM produtos
            WHERE categoria_id = id_categoria;

            RETURN COALESCE(valor_total, 0);
            END;
            $$ LANGUAGE plpgsql;
        </sql>
    </changeSet>
</databaseChangeLog>